@model IEnumerable<CostControlWebsite.Models.T_PoJoinPR>

@{
    /**/

    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@{
    if (TempData["User_name"] == null && Session["User_name"] == null)
    {
        <script type="text/javascript">

            window.location.href = '/Login/LoginIndex/';


        </script>
    }}
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <style>
        * {
            box-sizing: border-box;
        }

        /* Create two equal columns that floats next to each other */
        .column {
            float: left;
            width: 50%;
            padding: 10px;
            height: 300px; /* Should be removed. Only for demonstration */
        }

        /* Clear floats after the columns */
        .row:after {
            content: "";
            display: table;
            clear: both;
        }
    </style>

</head>
<body>
    <div style="text-align:center;width:100%;height:10%;font-family:'Lucida Grande'">
        <h2>
            <span style="color: red">P</span>
            <span style="color: blue">O</span> &
            <span style="color: red">P</span>
            <span style="color: blue">R</span>
        </h2>
    </div>


    <div class="row" style="box-shadow: 0 4px 8px 0 rgba(0, 0, 0, 0.19), 0 6px 20px 0 rgba(0, 0, 0, 0.19);">
        <div class="column" style="background-color:rgba(100, 220, 247, 0.10);">
            <p style="text-align:center;font-size:36px;font-family:'Lucida Grande'">PO : @ViewBag.sumpo</p><br />
            <div class="row">
                <div class="column">
                    <p style="text-align:left;font-size:36px;font-family:'Lucida Grande'">
                        Holding : @ViewBag.sumhopo
                    </p>

                    <br />
                    <br />

                    <p style="margin-left:10px">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("ShowPo", "Show")'">Go To Approved</button>
                    </p>
                </div>
                <div class="column"><p style="text-align:right;font-size:36px;font-family:'Lucida Grande'">Reject : @ViewBag.sumrepo</p></div>
            </div>
        </div>
        <div class="column" style="background-color:rgba(100, 220, 247,2);">
            <p style="text-align:center;font-size:36px;font-family:'Lucida Grande'">PR : @ViewBag.sumpr</p><br />

            <div class="row">
                <div class="column">
                    <p style="text-align:left;font-size:36px;font-family:'Lucida Grande'">Holding : @ViewBag.sumhopr</p>
                    <br />
                    <br />

                    <p style="margin-left:10px">
                        <button class="btn btn-success" type="button" onclick="location.href='@Url.Action("ShowPR", "Show")'">Go To Approved</button>
                    </p>

                </div>
                <div class="column">
                    <p style="text-align:right;font-size:36px;font-family:'Lucida Grande'">Reject : @ViewBag.sumrepr</p>
                </div>

            </div>

        </div>
    </div>

</body>
</html>
